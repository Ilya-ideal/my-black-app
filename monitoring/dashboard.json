{
  "title": "Black App Monitoring Dashboard",
  "panels": [
    {
      "title": "Application Health",
      "type": "stat",
      "targets": [
        {
          "expr": "app_health_status",
          "legendFormat": "Health Status"
        }
      ]
    },
    {
      "title": "Memory Usage",
      "type": "gauge", 
      "targets": [
        {
          "expr": "app_memory_usage",
          "legendFormat": "Memory %"
        }
      ]
    },
    {
      "title": "CPU Usage",
      "type": "gauge",
      "targets": [
        {
          "expr": "app_cpu_usage", 
          "legendFormat": "CPU %"
        }
      ]
    },
    {
      "title": "HTTP Requests",
      "type": "graph",
      "targets": [
        {
          "expr": "rate(app_http_requests_total[5m])",
          "legendFormat": "Requests/sec"
        }
      ]
    }
  ]
}